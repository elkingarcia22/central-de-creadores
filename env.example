# ====================================
# CONFIGURACIÓN SUPABASE
# ====================================

# URL de tu proyecto Supabase
SUPABASE_URL=https://your-project.supabase.co

# Clave anónima de Supabase (para operaciones públicas)
SUPABASE_ANON_KEY=your-anon-key-here

# Clave de servicio de Supabase (para operaciones administrativas)
SUPABASE_SERVICE_ROLE_KEY=your-service-role-key-here

# ====================================
# CONFIGURACIÓN DE DESARROLLO
# ====================================

# Entorno de ejecución
NODE_ENV=development

# Modo debug (true/false)
DEBUG=false

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Puerto del servidor MCP (opcional)
MCP_PORT=3001

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================

# Esquema de base de datos (por defecto: public)
DB_SCHEMA=public

# Timeout para consultas SQL (en milisegundos)
DB_TIMEOUT=30000

# Número máximo de conexiones
DB_MAX_CONNECTIONS=10

# ====================================
# CONFIGURACIÓN DE LOGGING
# ====================================

# Archivo de log
LOG_FILE=mcp-server.log

# Rotación de logs (true/false)
LOG_ROTATION=true

# Tamaño máximo de archivo de log (en MB)
LOG_MAX_SIZE=10

# ====================================
# CONFIGURACIÓN DE TESTING
# ====================================

# URL de Supabase para testing
TEST_SUPABASE_URL=https://your-test-project.supabase.co

# Clave de testing
TEST_SUPABASE_ANON_KEY=your-test-anon-key

# Clave de servicio para testing
TEST_SUPABASE_SERVICE_ROLE_KEY=your-test-service-role-key

# ====================================
# CONFIGURACIÓN DE SEGURIDAD
# ====================================

# Clave secreta para JWT (opcional)
JWT_SECRET=your-jwt-secret-here

# Tiempo de expiración de tokens (en segundos)
TOKEN_EXPIRY=3600

# ====================================
# CONFIGURACIÓN DE MONITOREO
# ====================================

# Habilitar métricas (true/false)
ENABLE_METRICS=true

# Intervalo de métricas (en segundos)
METRICS_INTERVAL=60

# ====================================
# CONFIGURACIÓN DE CACHE
# ====================================

# Habilitar cache (true/false)
ENABLE_CACHE=true

# Tiempo de vida del cache (en segundos)
CACHE_TTL=300

# ====================================
# CONFIGURACIÓN DE RATE LIMITING
# ====================================

# Habilitar rate limiting (true/false)
ENABLE_RATE_LIMITING=true

# Límite de requests por minuto
RATE_LIMIT_REQUESTS=100

# ====================================
# CONFIGURACIÓN DE BACKUP
# ====================================

# Habilitar backups automáticos (true/false)
ENABLE_AUTO_BACKUP=false

# Intervalo de backup (en horas)
BACKUP_INTERVAL=24

# Directorio de backups
BACKUP_DIR=./backups

# ====================================
# CONFIGURACIÓN DE NOTIFICACIONES
# ====================================

# Habilitar notificaciones (true/false)
ENABLE_NOTIFICATIONS=false

# Webhook para notificaciones
NOTIFICATION_WEBHOOK=https://hooks.slack.com/services/your-webhook

# ====================================
# CONFIGURACIÓN DE INTEGRACIÓN
# ====================================

# API Key para servicios externos (opcional)
EXTERNAL_API_KEY=your-external-api-key

# URL de servicios externos
EXTERNAL_API_URL=https://api.external-service.com

# ====================================
# CONFIGURACIÓN DE DESARROLLO LOCAL
# ====================================

# Habilitar modo desarrollo local
LOCAL_DEV=true

# Puerto para desarrollo local
LOCAL_PORT=3000

# Host para desarrollo local
LOCAL_HOST=localhost

# ====================================
# CONFIGURACIÓN DE DOCUMENTACIÓN
# ====================================

# Habilitar generación automática de documentación
AUTO_GENERATE_DOCS=true

# Directorio de documentación
DOCS_DIR=./docs

# Formato de documentación (markdown, html, pdf)
DOCS_FORMAT=markdown 