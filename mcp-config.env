# ====================================
# CONFIGURACIÓN DE DESARROLLO
# ====================================

# Entorno de ejecución
NODE_ENV=development

# Modo debug (true/false)
DEBUG=false

# Nivel de logging (error, warn, info, debug)
LOG_LEVEL=info

# Puerto del servidor MCP (opcional)
MCP_PORT=3001

# ====================================
# CONFIGURACIÓN DE BASE DE DATOS
# ====================================

# Esquema de base de datos (por defecto: public)
DB_SCHEMA=public

# Timeout para consultas SQL (en milisegundos)
DB_TIMEOUT=30000

# Número máximo de conexiones
DB_MAX_CONNECTIONS=10

# ====================================
# CONFIGURACIÓN DE LOGGING
# ====================================

# Archivo de log
LOG_FILE=mcp-server.log

# Rotación de logs (true/false)
LOG_ROTATION=true

# Tamaño máximo de archivo de log (en MB)
LOG_MAX_SIZE=10

# ====================================
# CONFIGURACIÓN DE CACHE
# ====================================

# Habilitar cache (true/false)
ENABLE_CACHE=true

# Tiempo de vida del cache (en segundos)
CACHE_TTL=300

# ====================================
# CONFIGURACIÓN DE SEGURIDAD
# ====================================

# Clave secreta para JWT (opcional)
JWT_SECRET=central-de-creadores-mcp-secret-key

# Tiempo de expiración de tokens (en segundos)
TOKEN_EXPIRY=3600 
# ====================================
# CONFIGURACIÓN DE OPENAI
# ====================================

# OpenAI API Key (REEMPLAZA CON TU API KEY REAL)
OPENAI_API_KEY=sk-your-openai-api-key-here

# Modelo de OpenAI a usar (gpt-4, gpt-3.5-turbo, etc.)
OPENAI_MODEL=gpt-4

# Temperatura para generación (0.0 - 2.0)
OPENAI_TEMPERATURE=0.7

# Máximo de tokens por respuesta
OPENAI_MAX_TOKENS=2000

# Timeout para requests a OpenAI (en milisegundos)
OPENAI_TIMEOUT=30000

