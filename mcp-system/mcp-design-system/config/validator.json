{
  "rules": {
    "colors": {
      "enforce_tokens": true,
      "allowed_colors": {
        "primary": "rgb(12 91 239)",
        "primary_hover": "rgb(29 78 216)",
        "secondary": "rgb(226 232 240)",
        "destructive": "rgb(220 38 38)",
        "success": "rgb(22 163 74)",
        "warning": "rgb(234 179 8)"
      },
      "disallowed_patterns": [
        "#[0-9a-fA-F]{3,6}",
        "rgb\\([^)]+\\)",
        "rgba\\([^)]+\\)"
      ]
    },
    "typography": {
      "enforce_scale": true,
      "allowed_fonts": ["Inter", "-apple-system", "BlinkMacSystemFont", "Segoe UI", "Roboto", "sans-serif"],
      "allowed_sizes": {
        "xs": "0.75rem",
        "sm": "0.875rem",
        "base": "1rem",
        "lg": "1.125rem",
        "xl": "1.25rem",
        "2xl": "1.5rem",
        "3xl": "1.875rem",
        "4xl": "2.25rem",
        "5xl": "3rem"
      },
      "allowed_weights": {
        "light": "300",
        "normal": "400",
        "medium": "500",
        "semibold": "600",
        "bold": "700",
        "extrabold": "800"
      }
    },
    "spacing": {
      "enforce_scale": true,
      "allowed_units": ["rem", "em", "px"],
      "allowed_values": {
        "0": "0px",
        "px": "1px",
        "0.5": "0.125rem",
        "1": "0.25rem",
        "1.5": "0.375rem",
        "2": "0.5rem",
        "2.5": "0.625rem",
        "3": "0.75rem",
        "3.5": "0.875rem",
        "4": "1rem"
      }
    },
    "components": {
      "enforce_props": true,
      "required_props": {
        "Button": ["variant", "size"],
        "Input": ["type"],
        "Typography": ["variant", "color"],
        "Card": ["variant", "padding"]
      },
      "allowed_variants": {
        "Button": ["primary", "secondary", "destructive"],
        "Card": ["default", "elevated", "outlined"],
        "Typography": ["h1", "h2", "h3", "h4", "h5", "h6", "subtitle1", "subtitle2", "body1", "body2", "caption", "overline"]
      }
    }
  },
  "validation": {
    "strict_mode": true,
    "auto_fix": true,
    "ignore_patterns": [
      "**/*.test.tsx",
      "**/*.stories.tsx",
      "**/node_modules/**"
    ]
  }
}
