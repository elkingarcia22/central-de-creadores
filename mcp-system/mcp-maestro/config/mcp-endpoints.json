  "communication": {
    "protocol": "stdio",
    "message_format": "json",
    "timeout_seconds": 30,
    "retry_attempts": 3,
    "batch_size": 10
  },
  "orchestration_rules": {
    "parallel_execution": {
      "max_concurrent_mcps": 3,
      "safe_combinations": [
        ["design-system", "documentation"],
        ["testing-qa", "documentation"],
        ["code-structure", "testing-qa"]
      ],
      "unsafe_combinations": [
        ["supabase", "deploy-devops"],
        ["code-structure", "deploy-devops"]
      ]
    },
    "dependency_management": {
      "startup_order": [
        "maestro",
        "design-system",
        "supabase",
        "code-structure",
        "testing-qa",
        "deploy-devops",
        "documentation"
      ],
      "shutdown_order": [
        "documentation",
        "deploy-devops",
        "testing-qa",
        "code-structure",
        "supabase",
        "design-system",
        "maestro"
      ]
    },
    "escalation": {
      "timeout_escalation": "maestro",
      "error_escalation": "maestro",
      "conflict_resolution": "maestro"
    }
  },
  "context_management": {
    "session_timeout_minutes": 60,
    "max_session_history": 1000,
    "context_compression_threshold": 10000,
    "auto_save_interval_minutes": 5
  },
  "performance": {
    "health_check_interval_seconds": 30,
    "metrics_collection_interval_seconds": 60,
    "log_retention_days": 30,
    "max_memory_usage_mb": 512
  }
}