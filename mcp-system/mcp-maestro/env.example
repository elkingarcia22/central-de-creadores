# MCP MAESTRO - Configuración de Entorno
# Copia este archivo como .env y configura los valores según tu entorno

# Configuración del Servidor
MCP_MAESTRO_PORT=3000
MCP_MAESTRO_HOST=localhost
NODE_ENV=development

# Configuración de Timeouts (en segundos)
MCP_TIMEOUT_SECONDS=30
SESSION_TIMEOUT_MINUTES=60
HEALTH_CHECK_INTERVAL_SECONDS=30

# Configuración de Performance
MAX_CONCURRENT_MCPS=3
MAX_SESSION_HISTORY=1000
CONTEXT_COMPRESSION_THRESHOLD=10000
AUTO_SAVE_INTERVAL_MINUTES=5

# Configuración de Storage
STORAGE_TYPE=file
# STORAGE_TYPE=database  # Para usar base de datos
# DATABASE_URL=postgresql://usuario:password@localhost:5432/mcp_maestro

# Configuración de Logs
LOG_LEVEL=info
# LOG_LEVEL=debug  # Para desarrollo
LOG_RETENTION_DAYS=30
LOG_FORMAT=json

# Configuración de Contexto
CONTEXT_RETENTION_DAYS=30
ENABLE_CONTEXT_COMPRESSION=true
ENABLE_AUTO_CONTEXT_RECOVERY=true

# Configuración de Seguridad
ENABLE_ENCRYPTION=true
SECRET_KEY=tu-clave-secreta-muy-segura-aqui
API_KEY_EXPIRY_HOURS=24

# Configuración de MCPs Especializados
ENABLE_DESIGN_SYSTEM_MCP=true
ENABLE_SUPABASE_MCP=true
ENABLE_CODE_STRUCTURE_MCP=true
ENABLE_TESTING_QA_MCP=true
ENABLE_DEPLOY_DEVOPS_MCP=true
ENABLE_DOCUMENTATION_MCP=true

# Configuración de Monitoreo
ENABLE_METRICS=true
METRICS_PORT=3001
ENABLE_HEALTH_ENDPOINT=true

# Configuración de GitHub (para integración con CI/CD)
GITHUB_TOKEN=tu-token-de-github-aqui
GITHUB_REPO=elkingarcia22/central-de-creadores
GITHUB_BRANCH=main

# Configuración de Notificaciones
ENABLE_NOTIFICATIONS=true
# SLACK_WEBHOOK_URL=https://hooks.slack.com/services/...
# DISCORD_WEBHOOK_URL=https://discord.com/api/webhooks/...

# Configuración Específica del Proyecto
PROJECT_NAME=central-de-creadores
PROJECT_VERSION=1.0.0
PROJECT_ENVIRONMENT=development

# Configuración de Backups
AUTO_BACKUP_ENABLED=true
BACKUP_INTERVAL_HOURS=6
BACKUP_RETENTION_DAYS=7
BACKUP_LOCATION=./storage/backups

# Configuración de Cache
ENABLE_CACHE=true
CACHE_TTL_MINUTES=30
CACHE_MAX_SIZE=100

# Configuración de Rate Limiting
ENABLE_RATE_LIMITING=true
RATE_LIMIT_REQUESTS_PER_MINUTE=60
RATE_LIMIT_BURST=10